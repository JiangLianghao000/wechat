        <servlet-name>CircleServlet</servlet-name>
        <servlet-class>com.jianglianghao.view.CircleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CircleServlet</servlet-name>
        <url-pattern>/circleServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManagerServlet</servlet-name>
        <servlet-class>com.jianglianghao.view.ManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerServlet</servlet-name>
        <url-pattern>/managerServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserChatServlet</servlet-name>
        <servlet-class>com.jianglianghao.view.UserChatServlet</servlet-class>
