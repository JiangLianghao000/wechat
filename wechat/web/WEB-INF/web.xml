    </servlet-mapping>


    <servlet>
        <servlet-name>UserAndFriendServlet</servlet-name>
        <servlet-class>com.jianglianghao.view.UserAndFriendServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAndFriendServlet</servlet-name>
        <url-pattern>/userAndFriendServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAndGroupServlet</servlet-name>
        <servlet-class>com.jianglianghao.view.UserAndGroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAndGroupServlet</servlet-name>
        <url-pattern>/userAndGroupServlet</url-pattern>
    </servlet-mapping>

