        <servlet-class>com.jianglianghao.view.GroupChatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GroupChatServlet</servlet-name>
        <url-pattern>/groupChatServlet</url-pattern>
    </servlet-mapping>



    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!--filter 标签用于配置一个 Filter 过滤器-->
    <filter>
        <!--给 filter 起一个别名-->
        <filter-name>LoginFilter</filter-name>
        <!--配置 filter 的全类名-->
        <filter-class>com.jianglianghao.view.filter.LoginFilter</filter-class>
    </filter>
    <!--filter-mapping 配置 Filter 过滤器的拦截路径-->
    <filter-mapping>
        <!--filter-name 表示当前的拦截路径给哪个 filter 使用-->
        <filter-name>LoginFilter</filter-name>
        <!--url-pattern 配置拦截路径 / 表示请求地址为：http://ip:port/工程路径/ 映射到 IDEA 的 web 目录 /pages/* 表示请求地址为：http://ip:port/工程路径/pages/* -->
        <url-pattern>/pages/user/login.jsp</url-pattern>
    </filter-mapping>


    <!--filter 标签用于配置一个 Filter 过滤器-->
    <filter>
        <!--给 filter 起一个别名-->
        <filter-name>xssFilter</filter-name>
        <!--配置 filter 的全类名-->
        <filter-class>com.jianglianghao.view.filter.xssFilter</filter-class>
    </filter>
    <!--filter-mapping 配置 Filter 过滤器的拦截路径-->
    <filter-mapping>
        <!--filter-name 表示当前的拦截路径给哪个 filter 使用-->
        <filter-name>xssFilter</filter-name>
        <!--url-pattern 配置拦截路径 / 表示请求地址为：http://ip:port/工程路径/ 映射到 IDEA 的 web 目录 /pages/* 表示请求地址为：http://ip:port/工程路径/pages/* -->
        <url-pattern>/pages/mainView</url-pattern>
        <url-pattern>/pages/others</url-pattern>
        <url-pattern>/pages/user</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <listener>
        <listener-class>com.jianglianghao.view.listen.ApplicationInit</listener-class>
    </listener>
</web-app>